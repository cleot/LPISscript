{
  "manifest_version": 2,

  "name": "LPIS Anmeldeskript",
  "description": "This extension allows the user to automatically sign up for courses via LPIS.",
  "version": "1.0",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
   //   "css": ["styles.css"],
      "js": ["jquery-3.3.1.js", "content3.js"]
    }
  ],

  "browser_action": {
    "default_icon": "icon128.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "<all_urls>",
    "webRequest",
    "webRequestBlocking",
    "background",
    "activeTab",
    "storage"
  ]
}